#!/bin/bash

if [ -d "${HOME}/.local/share/Trash/" ]; then
    rm -rfv "${HOME}/.local/share/Trash/"
fi

for item in /media/*; do
    if [ -d "${item}/.Trash-${EUID}/" ]; then
         rm -rfv "${item}/.Trash-${EUID}/"
    fi
done

for item in  *~ .*~ *.exe *.pyc *.out; do
    if [ -f "${item}" ]; then
        rm -fv "${item}"
    fi
done
