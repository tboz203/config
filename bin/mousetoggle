#!/bin/sh

#dev="SynPS/2 Synaptics TouchPad"
dev="AlpsPS/2 ALPS GlidePoint"

# make sure we have the device
if ! xinput list | grep -q "$dev"; then
    echo "[-] Mouse not detected!"
    exit
fi

# test it's state
if xinput list-props "$dev" | grep -q 'Device Enabled.*1$'; then
    # disable
    xinput disable "$dev"
else
    # enable
    xinput enable "$dev"
fi
