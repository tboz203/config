#!/usr/bin/env python3

import argparse
import sys

from pprint import pprint

import yaml


parser = argparse.ArgumentParser(description='Dump yaml files')
# parser.add_argument('inputs', nargs='*', default=[sys.stdin], help='files to read; defaults to stdin')
parser.add_argument('inputs', nargs='*', help='files to read; defaults to stdin')
args = parser.parse_args()

if not args.inputs:
    pprint(yaml.safe_load(sys.stdin))
else:
    for stream in args.inputs:
        with open(stream) as f:
            pprint(yaml.safe_load(f))
