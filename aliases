#!/bin/bash
# color aliases
alias ls='ls --color=auto --hide=*~ --hide=.*~ --group-directories-first'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias tree='tree -C'

# some aliases based off ls
alias ll='ls -lhF'
alias la='ls -A'
alias lf='ll -S'
alias lv='ls --sort=v'
alias l='ls -CF'
alias lla='ll -A'
alias lt='ll --sort=t'

# shorten some stuff
alias h='hostname'
alias py='python -B'
alias py3='python3 -B'
alias ...='../..'
alias ....='../../..'
alias .....='../../../..'

# some git commands
# start using the built-in git alias stuff!
# alias gits='git status'
# alias gitl='git log --graph --decorate --date-order --decorate-refs-exclude="*-staging-*" --oneline'
# alias gitlf='git log --graph --decorate --date-order --decorate-refs-exclude="*-staging-*" --format=bigline'
# alias gitla='gitl --all'
# alias gitlaf='gitlf --all'
# alias gitb='git branch -vva'
# alias gitr='git remote -vv'
# alias gitd='git diff'

# open each file in its own tab
alias vim='vim -Xp'

# common misspellings
alias sl=ls
alias s=ls
alias fl=lf
alias f=lf
alias ivm=vim
alias vmi=vim
alias cdd=cd

# make du and df a bit more readable
alias df='df -h'
alias du='du -hc 2>/dev/null'

alias dfx='df -h -t xfs'

# make some basic commands default to verbose, interactive, and recursive (if
# not already)
alias mv='mv -vi'
alias cp='cp -vri'
alias rm='rm -vI'

# some ps aliases
alias ps='ps -H'
alias psef='ps -ef'

# some aliases for date in a sortable format
alias day='date +%Y-%m-%d'
alias full='date "+%Y.%m.%d-%H.%M.%S"'

# set some default flags
alias wc='wc -cmlLw'
alias tidy='tidy -f /dev/null -iqmw'
alias astyle='astyle -sajcn'
alias find='find 2>/dev/null'
alias less='less -SR'

# misc
alias rgrep='grep -r'
alias quit='exit'
alias vimrc='vim ~/.vimrc'
alias gvimrc='gvim ~/.gvimrc'
alias aliases='vim ~/.bash_aliases'
alias bashrc='vim ~/.bashrc'
alias rmf='rm -rf'
alias listening='lsof -i -s TCP:Listen'
alias status='systemctl status "diesel*"'
alias docker-prune='docker system prune -f'

alias svim='sudo vim "+set nu bg=dark ls=2 so=3" -p'
