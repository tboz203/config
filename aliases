# color aliases
alias ls='ls --color=auto --hide=*~ --hide=.*~ --group-directories-first'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some aliases based off ls
alias ll='ls -lhF'
alias la='ls -A'
alias lf='ll -S'
alias lv='ls --sort=v'
alias l='ls -CF'
alias lla='ll -A'
alias lt='ll --sort=t'

# shorten some stuff
alias h='hostname'
alias py='python -B'
alias py3='python3 -B'
alias tc='sudo truecrypt -t'
alias ...='../..'
alias ....='../../..'
alias .....='../../../..'

# some git commands
alias gits='git status'
alias gitl='git log --oneline --graph --decorate'
alias gitb='git branch -vva'
alias gitr='git remote -vv'
alias gitd='git diff'

# open each file in its own tab
alias vim='vim -p'

# common misspellings
alias sl=ls
alias s=ls
alias fl=lf
alias f=lf
alias ivm=vim
alias vmi=vim
alias oepn=open

# make du and df a bit more readable
alias df='df -h'
alias du='du -hc 2>/dev/null'

# make some basic commands default to verbose, interactive, and recursive (if
# not already)
alias mv='mv -vi'
alias cp='cp -vri'
alias rm='rm -vI'

# some ps aliases
alias ps='ps -H'
alias psef='ps -ef'

# some aliases for date in a sortable format
alias day='date +%Y-%m-%d'
alias full='date "+%Y.%m.%d-%H.%M.%S"'

# set some default flags
alias wc='wc -cmlLw'
alias tidy='tidy -f /dev/null -iqmw'
alias astyle='astyle -sajcn'
alias find='find 2>/dev/null'
alias less='less -SR'
alias nethogs='nethogs wlan0'
alias iftop='iftop -i wlan0'

# misc
alias rgrep='grep -r'
alias quit='exit'
alias vimrc='vim ~/.vimrc'
alias gvimrc='gvim ~/.gvimrc'
alias aliases='vim ~/.bash_aliases'
alias bashrc='vim ~/.bashrc'
alias math='python3 -ic "from math import *"'
alias server='python -m SimpleHTTPServer'
alias eq='pulseaudio-equalizer-gtk'
alias rmf='rm -rf'
alias psf='ps -ef'
alias listening='lsof -i -s TCP:Listen'

# obsoleted by update script and sudoers
# alias update='sudo apt-get update && sudo apt-get upgrade'
alias update='sudo update'

alias snst='snort-stat < /var/log/snort/alert | vim -c "set ft=snort-stat nolist bt=nofile" -'
alias hping='sudo hping3'
