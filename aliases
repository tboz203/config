# color aliases
alias ls='ls --color=auto --hide=*~ --hide=.*~ --group-directories-first'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some aliases based off ls
alias ll='ls -lhF'
alias la='ls -A'
alias lf='ll -S'
alias lv='ls --sort=v'
alias l='ls -CF'

# shorten some stuff
alias h='hostname'
alias py='python -B'
alias py3='python3 -B'
alias tc='truecrypt -t'
alias ...='../..'
alias ....='../../..'
alias .....='../../../..'

# some git commands
alias gits='git status'
alias gitl='git log --oneline --graph'
alias gitb='git branch -vva'
alias gitr='git remote -vv'
alias gitd='git diff'

# open each file in its own tab
alias vim='vim -p'

# common misspellings
alias sl=ls
alias s=ls
alias fl=lf
alias f=lf
alias ivm=vim
alias vmi=vim
alias oepn=open

# make du and df a bit more readable
alias df='df -h'
alias du='du -hc 2>/dev/null'

# make some basic commands default to verbose, interactive, and recursive (if
# not already)
alias mv='mv -vi'
alias cp='cp -vri'
alias rm='rm -vI'
alias rmf='rm -rf'

# some aliases for date in a sortable format
alias day='date +%Y-%m-%d'
alias full='date "+%Y.%m.%d-%H.%M.%S"'

# default wc to use all options
alias wc='wc -cmlLw'

# misc
alias rgrep='grep -r'
alias quit='exit'
alias vimrc='vim ~/.vimrc'
alias aliases='vim ~/.bash_aliases'
alias bashrc='vim ~/.bashrc'
alias update='sudo apt-get update && sudo apt-get upgrade'
alias math='python3 -ic "from math import *"'
alias beta='ssh twb015@beta.latech.edu'
alias open='xdg-open'
alias tidy='tidy -f /dev/null -iqmw'
alias server='python -m SimpleHTTPServer'

