#!/usr/local/bin/python3
"""
Attempt to extract python literals from stdin & re-print them as json.
"""

import ast
import fileinput
import json
import traceback

try:
    for line in fileinput.input():
        try:
            item_literal = ast.literal_eval(line.strip())
            item_json = json.dumps(item_literal, indent=2)
            print(item_json)
        except (ValueError, TypeError, KeyboardInterrupt):
            break
except OSError as exc:
    exit(exc)
except Exception:
    traceback.print_exc()
    exit(1)
